<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10px"
    android:layout_marginRight="10px"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_content_img"
        android:layout_width="100px"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16px"
        android:src="@mipmap/icon_pop_alerts" />

    <TextView
        android:id="@+id/dialog_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:gravity="center"
        android:text="弹窗标题"
        android:textColor="#FF484848"
        android:textSize="20px" />

    <TextView
        android:id="@+id/dialog_content_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:text="内容详情，根据实际文案安排"
        android:textColor="#FF484848"
        android:textSize="15px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="16px"
        android:background="#FFEDEDF0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44px">

        <TextView
            android:id="@+id/dialog_content_cancel"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#FF737373"
            android:textSize="17px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#FFEDEDF0" />

        <TextView
            android:id="@+id/dialog_content_sure"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="#FF484848"
            android:textSize="17px" />

    </LinearLayout>
</LinearLayout>
