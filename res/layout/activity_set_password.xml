<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.qcx.mini.activity.SetPasswordActivity">

    <include layout="@layout/titlebar_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:text="请设置6位交易密码"
        android:textColor="#FF616266"
        android:textSize="14px" />

    <com.qcx.mini.widget.PasswordView
        android:id="@+id/set_password_password_view"
        android:layout_width="240px"
        android:layout_height="44px"
        android:layout_marginTop="30px"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/set_password_submit"
        android:layout_width="200px"
        android:layout_height="44px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:gravity="center"
        android:text="确认"
        android:background="@drawable/bg_circular_gray1"
        android:textColor="#FFFFFFFF"
        android:textSize="16px" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.qcx.mini.widget.numSoftKeyboart.NumSoftKeyboard
            android:id="@+id/set_password_num_soft_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#E6D2D5DB"/>
    </FrameLayout>

</LinearLayout>
