<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.qcx.mini.widget.CircleImageView
        android:id="@+id/item_follower_icon"
        android:layout_width="44px"
        android:layout_height="44px"
        android:layout_marginTop="16px"
        android:layout_marginLeft="16px"
        android:layout_marginBottom="16px"
        android:src="@mipmap/img_me"/>
    <TextView
        android:id="@+id/item_follower_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="------"
        android:layout_marginLeft="8px"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/item_follower_icon"
        android:textColor="#FF484848"
        android:textSize="17px"
        android:layout_marginTop="20px"
        />
    <ImageView
        android:id="@+id/item_follower_sex"
        android:layout_width="14px"
        android:layout_height="14px"
        android:layout_marginTop="23px"
        android:layout_toEndOf="@+id/item_follower_name"/>
    <TextView
        android:id="@+id/item_follower_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-------- ----"
        android:textColor="#FFABB1BA"
        android:textSize="11px"
        android:maxLength="15"
        android:layout_alignStart="@+id/item_follower_name"
        android:layout_below="@+id/item_follower_name"
        android:layout_marginTop="1px"
        />

    <ImageView
        android:id="@+id/item_follower_status"
        android:layout_width="64px"
        android:layout_height="30px"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16px"/>

</RelativeLayout>