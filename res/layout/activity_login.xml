<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_view"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_login"
    android:orientation="vertical"
    tools:context="com.qcx.mini.activity.LoginActivity">

    <ImageView
        android:id="@+id/login_back"
        android:layout_width="32px"
        android:layout_height="44px"
        android:layout_marginLeft="10px"
        android:layout_marginTop="20px"
        android:src="@mipmap/btn_nav_white" />

    <LinearLayout
        android:id="@+id/login_step1_viw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="57px"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="欢迎回来"
            android:textColor="#FFFFFFFF"
            android:textSize="17px" />

        <EditText
            android:id="@+id/login_input"
            android:layout_width="wrap_content"
            android:layout_height="45px"
            android:layout_below="@+id/login_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8px"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#afffffff"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="32px" />

        <LinearLayout
            android:id="@+id/login_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64px">

            <TextView
                android:id="@+id/login_tsw"
                android:layout_width="wrap_content"
                android:layout_height="18px"
                android:text="继续表示您同意"
                android:textColor="#FFFFFFFF"
                android:textSize="13px" />

            <TextView
                android:id="@+id/login_tsh"
                android:layout_width="wrap_content"
                android:layout_height="18px"
                android:text="咚咚拼车用户协议"
                android:textColor="#FFFFCA73"
                android:textSize="13px" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_step2_viw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <com.qcx.mini.widget.CircleImageView
            android:id="@+id/login_icon"
            android:layout_width="120px"
            android:layout_height="120px"
            android:src="@mipmap/img_nohead" />

        <EditText
            android:id="@+id/login_input_name"
            android:layout_width="wrap_content"
            android:layout_height="45px"
            android:layout_below="@+id/login_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8px"
            android:background="@null"
            android:gravity="center"
            android:hint="请设置昵称"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#afffffff"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="32px" />

        <LinearLayout
            android:layout_width="140px"
            android:layout_height="32px"
            android:layout_marginTop="8px"
            android:background="@drawable/bg_border_white">

            <TextView
                android:id="@+id/login_sex1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_circular_white1"
                android:gravity="center"
                android:text="女"
                android:textColor="#FF699FF1"
                android:textSize="17px" />

            <TextView
                android:id="@+id/login_sex2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="男"
                android:textColor="#FFFFFFFF"
                android:textSize="17px" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/login_next"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12px"
        android:src="@mipmap/btn_login_next" />

    <TextView
        android:id="@+id/login_step"
        android:layout_width="wrap_content"
        android:layout_height="14px"
        android:layout_below="@+id/login_next"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4px"
        android:text="1 of 3"
        android:textColor="#FFFFFFFF"
        android:textSize="10px" />

</LinearLayout>
