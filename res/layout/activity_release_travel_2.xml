<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5F7"
    android:orientation="vertical"
    tools:context="com.qcx.mini.activity.ReleaseTravel_2Activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <include layout="@layout/titlebar_1" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/release_travel_describe_view"
        android:layout_width="match_parent"
        android:layout_height="32px"
        android:background="#FF64B5F6">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="发布6小时内行程得20原力,6小时后行程得双倍,每日限2次奖励"
                android:textColor="#FFFFFFFF"
                android:textSize="11px" />

            <ImageView
                android:layout_width="16px"
                android:layout_height="16px"
                android:background="@android:color/black" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8px"
        android:background="@drawable/bg_circular_white"
        android:divider="@drawable/divider_gray_vertical"
        android:elevation="1dp"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/release_travel_startAddress_view"
                    android:layout_width="match_parent"
                    android:layout_height="49px"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14px"
                        android:layout_height="14px"
                        android:layout_marginLeft="15px"
                        android:src="@mipmap/icon_map_star" />

                    <TextView
                        android:id="@+id/release_travel_startAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="18px"
                        android:layout_marginLeft="4px"
                        android:hint="请输入您的起点"
                        android:textColor="#FF484848"
                        android:textSize="14px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="44px"
                    android:background="@color/gray_line" />

                <LinearLayout
                    android:id="@+id/release_travel_way_point_view"
                    android:layout_width="match_parent"
                    android:layout_height="49px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14px"
                        android:layout_height="14px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15px"
                        android:src="@mipmap/btn_dot" />

                    <TextView
                        android:id="@+id/release_travel_way_point_text"
                        android:layout_width="match_parent"
                        android:layout_height="20px"
                        android:layout_marginLeft="4px"
                        android:layout_marginRight="16px"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:textColor="#FF616266"
                        android:textSize="14px" />

                    <ImageView
                        android:id="@+id/release_view_way_point_add"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:layout_marginLeft="17px"
                        android:layout_marginRight="8px"
                        android:src="@mipmap/btn_add"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:id="@+id/release_travel_way_point_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="44px"
                    android:background="@color/gray_line" />

                <LinearLayout
                    android:id="@+id/release_travel_endAddress_view"
                    android:layout_width="match_parent"
                    android:layout_height="50px"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14px"
                        android:layout_height="14px"
                        android:layout_marginLeft="15px"
                        android:src="@mipmap/icon_map_end" />

                    <TextView
                        android:id="@+id/release_travel_endAddress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="18px"
                        android:layout_marginLeft="4px"
                        android:hint="请输入目的地"
                        android:textColor="#FF484848"
                        android:textSize="14px" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/release_travel_add_way_point"
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16px"
                    android:src="@mipmap/btn_point" />

                <ImageView
                    android:id="@+id/release_travel_exchange_address"
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:layout_toEndOf="@+id/release_travel_add_way_point"
                    android:src="@mipmap/btn_exchange" />

                <LinearLayout
                    android:id="@+id/release_travel_route_strategy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15px"
                    android:layout_marginLeft="7px">

                    <ImageView
                        android:layout_width="14px"
                        android:layout_height="14px"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/btn_card_line_2" />

                    <TextView
                        android:id="@+id/release_travel_route_strategy_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="时间最短"
                        android:textColor="#FF4186E7"
                        android:textSize="12px" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/release_travel_start_time_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="14px"
                    android:layout_height="14px"
                    android:layout_marginLeft="15px"
                    android:src="@mipmap/icon_time" />

                <TextView
                    android:id="@+id/release_travel_start_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="出发时间"
                    android:textColor="#FF484848"
                    android:textSize="14px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/release_travel_seats_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="14px"
                    android:layout_height="14px"
                    android:layout_marginLeft="15px"
                    android:src="@mipmap/btn_card_seat_2" />

                <TextView
                    android:id="@+id/release_travel_seats_text"
                    android:layout_width="wrap_content"
                    android:layout_height="18px"
                    android:layout_marginLeft="15px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="乘车人数"
                    android:textColor="#FF484848"
                    android:textSize="14px" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/release_travel_line_name_view"
            android:layout_width="match_parent"
            android:layout_height="49px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="14px"
                android:layout_height="14px"
                android:layout_marginLeft="15px"
                android:src="@mipmap/icon_edit_new" />

            <EditText
                android:layout_width="0px"
                android:layout_height="0px" />

            <EditText
                android:id="@+id/release_travel_line_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="给路线起个名字，例如：上班，非必填"
                android:singleLine="true"
                android:textColor="#FF484848"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="14px" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/release_travel_line_auto_day_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8px"
        android:layout_marginRight="8px"
        android:layout_marginTop="9px"
        android:background="@drawable/bg_circular_white"
        android:elevation="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginTop="17px"
            android:text="自动发布"
            android:textColor="#FF232426"
            android:textSize="14px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginTop="18px"
            android:background="@drawable/bg_circular_yellow_2"
            android:paddingBottom="1px"
            android:paddingLeft="4px"
            android:paddingRight="4px"
            android:paddingTop="1px"
            android:text="开启获双倍原力"
            android:textColor="#FFF5F5F8"
            android:textSize="12px" />

        <TextView
            android:id="@+id/release_travel_lint_auto_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置行程时间,开启自动发布,行程发布匹配更高效"
            android:textColor="#FF939499"
            android:layout_marginLeft="16px"
            android:layout_marginTop="45px"
            android:layout_marginRight="55px"
            android:layout_marginBottom="15px"
            android:textSize="12px" />
        <com.qcx.mini.widget.SwitchView
            android:id="@+id/release_travel_switch_auto_release_day"
            android:layout_width="38px"
            android:layout_height="24px"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="15px"/>
    </FrameLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/release_travel_price_view"
            android:layout_width="match_parent"
            android:layout_height="50px">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/release_travel_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="0.0"
                    android:textColor="#FF484848"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/release_travel_price_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="元/座"
                    android:textColor="#FF484848"
                    android:textSize="14px" />

                <ImageView
                    android:id="@+id/release_travel_choose_price_img"
                    android:layout_width="14px"
                    android:layout_height="14px"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/btn_up" />
            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/release_travel_submit"
            android:layout_width="match_parent"
            android:layout_height="44px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:background="@drawable/bg_circular_gray1"
            android:gravity="center"
            android:text="确认发布"
            android:textColor="#FFFFFFFF"
            android:textSize="16px" />
    </LinearLayout>
</LinearLayout>
