<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.EditTextActivity">

    <include layout="@layout/titlebar_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="16px">

        <EditText
            android:id="@+id/edittext_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_all_selector"
            android:hint="请输入您的昵称"
            android:imeOptions="actionGo"
            android:singleLine="true"
            android:paddingLeft="12px"
            android:textColor="#FF484848"
            android:textSize="15px" />

        <FrameLayout
            android:id="@+id/edit_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true">

            <ImageView
                android:layout_width="18px"
                android:layout_height="18px"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:src="@mipmap/icon_delete_title" />
        </FrameLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/edit_btn_go"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginBottom="16px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="32px"
        android:background="@drawable/btn_selector"
        android:text="确认"
        android:textColor="#FFFFFFFF"
        android:textSize="17px" />
</LinearLayout>
