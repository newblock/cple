<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_balance_info_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12px"
        android:text="车费收入"
        android:textColor="#FF484848"
        android:textSize="17px" />

    <TextView
        android:id="@+id/item_balance_info_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018.07.09 00:05"
        android:textColor="#FF939499"
        android:layout_marginTop="38px"
        android:textSize="14px"
        android:layout_marginBottom="12px"/>
    <TextView
        android:id="@+id/item_balance_info_detail_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+10.00"
        android:layout_gravity="center_vertical|right"
        android:textColor="#FF616266"
        android:textSize="20px"
        />
</FrameLayout>