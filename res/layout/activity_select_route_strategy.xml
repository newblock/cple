<?xml version="1.0" encoding="utf-8"?>
<com.dexfun.layout.DexFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.amap.api.maps.MapView
        android:id="@+id/select_route_strategy_mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="180px"
        android:layout_marginTop="100px"/>

    <com.dexfun.layout.DexLinearLayout
        android:layout_width="match_parent"
        android:layout_height="182px"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical">

        <com.dexfun.layout.DexLinearLayout
            android:layout_width="match_parent"
            android:layout_height="84px"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:layout_marginTop="16px">

            <com.dexfun.layout.DexLinearLayout
                android:id="@+id/select_route_strategy_shortTime"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/select_route_strategy_title1"
                    android:layout_width="match_parent"
                    android:layout_height="18px"
                    android:gravity="center"
                    android:text="速度最快"
                    android:textColor="#FFFFFFFF"
                    android:textSize="13px" />

                <TextView
                    android:id="@+id/select_route_strategy_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="26px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8px"
                    android:text="0分"
                    android:textColor="#FF389CFF"
                    android:textSize="17px" />

                <TextView
                    android:id="@+id/select_route_strategy_distance1"
                    android:layout_width="wrap_content"
                    android:layout_height="21px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3px"
                    android:gravity="center"
                    android:text="0公里"
                    android:textColor="#FF389CFF"
                    android:textSize="15px" />
            </com.dexfun.layout.DexLinearLayout>

            <com.dexfun.layout.DexLinearLayout
                android:id="@+id/select_route_strategy_shortDistance"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginLeft="17px"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/select_route_strategy_title2"
                    android:layout_width="match_parent"
                    android:layout_height="18px"
                    android:gravity="center"
                    android:text="距离最短"
                    android:textColor="#FFFFFFFF"
                    android:textSize="13px" />

                <TextView
                    android:id="@+id/select_route_strategy_time2"
