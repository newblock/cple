                    android:layout_height="21px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3px"
                    android:gravity="center"
                    android:text="0公里"
                    android:textColor="#FF389CFF"
                    android:textSize="15px" />
            </com.dexfun.layout.DexLinearLayout>

            <com.dexfun.layout.DexLinearLayout
