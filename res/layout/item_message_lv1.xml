<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_message_lv1_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.qcx.mini.widget.CircleImageView
        android:id="@+id/item_message_lv1_icon"
        android:layout_width="28px"
        android:layout_height="28px"
        android:layout_marginLeft="16px"
        android:layout_marginTop="16px"
        android:src="@mipmap/img_me" />

    <TextView
        android:id="@+id/item_message_lv1_name"
        android:layout_width="wrap_content"
        android:layout_height="18px"
        android:singleLine="true"
        android:layout_alignTop="@+id/item_message_lv1_icon"
        android:layout_marginLeft="4px"
        android:layout_marginTop="5px"
        android:layout_toEndOf="@+id/item_message_lv1_icon"
        android:gravity="center_vertical"
        android:text="王晓明(主人)"
        android:textColor="#FF484848"
        android:textSize="13px" />

    <TextView
        android:id="@+id/item_message_lv1_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/item_message_lv1_name"
        android:layout_below="@+id/item_message_lv1_name"
        android:layout_marginRight="16px"
        android:text="在金台路地铁站上车可以吗"
        android:textColor="#FF484848"
        android:textSize="13px" />

    <TextView
        android:id="@+id/item_message_lv1_time"
        android:layout_width="wrap_content"
        android:layout_height="14px"
        android:text="11月11日10:20"
        android:gravity="center_vertical"
        android:layout_alignStart="@+id/item_message_lv1_name"
        android:layout_below="@+id/item_message_lv1_message"
        android:layout_marginTop="4px"
        android:textColor="#FFB9BDC3"
        android:textSize="10px"
        android:layout_marginBottom="16px"/>


</RelativeLayout>