<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_circular_white"
    android:elevation="2dp"
    android:layout_marginBottom="3dp">

    <com.qcx.mini.widget.CircleImageView
        android:id="@+id/item_group_travels_icon"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="55px"
        android:layout_marginRight="55px"
        android:layout_marginTop="9px"
        android:src="@mipmap/img_me"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20px"
        android:layout_marginTop="11px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="14px"
            android:layout_height="14px"
            android:layout_marginLeft="8px"
            android:src="@mipmap/icon_time" />

        <TextView
            android:id="@+id/item_group_travels_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#FF484848"
            android:textSize="14px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20px"
        android:layout_marginTop="2px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="14px"
            android:layout_height="14px"
            android:layout_marginLeft="8px"
            android:src="@mipmap/icon_start" />

        <TextView
            android:id="@+id/item_group_travels_start_address"
            android:layout_width="155px"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="------"
            android:textColor="#FF484848"
            android:textSize="14px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20px"
        android:layout_marginTop="2px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="14px"
            android:layout_height="14px"
            android:layout_marginLeft="8px"
            android:src="@mipmap/icon_end" />

        <TextView
            android:id="@+id/item_group_travels_end_address"
            android:layout_width="155px"
            android:layout_height="wrap_content"
            android:text="-------"
            android:maxLength="12"
            android:singleLine="true"
            android:textColor="#FF484848"
            android:textSize="14px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"
        android:layout_marginTop="7px"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/item_group_travels_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余座- 每座--元"
                android:textColor="#FF484848"
                android:textSize="14px"
                />
            <TextView
                android:id="@+id/item_group_travels_oper"
                android:layout_width="wrap_content"
                android:layout_height="16px"
                android:text="订座"
                android:paddingLeft="6px"
                android:paddingRight="6px"
                android:background="@drawable/bg_circular_blue"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="11px"
                android:layout_marginLeft="4px"
                />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>