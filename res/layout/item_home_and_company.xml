<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_home_and_company_home_address_img"
        android:layout_width="18px"
        android:layout_height="18px"
        android:layout_marginLeft="16px"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_homemini" />

    <LinearLayout
        android:id="@+id/item_home_and_company_home_address"
        android:layout_width="0px"
        android:layout_height="64px"
        android:layout_marginLeft="4px"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家"
            android:textColor="#FF0F151E"
            android:textSize="15px" />

        <TextView
            android:id="@+id/item_home_and_company_home_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="暂未设置"
            android:textColor="#FF9BA7BA"
            android:textSize="13px" />
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#F5F7FA" />

    <ImageView
        android:id="@+id/item_home_and_company_company_address_img"
        android:layout_width="18px"
        android:layout_height="18px"
        android:layout_marginLeft="17.5px"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_companymini" />

    <com.dexfun.layout.DexLinearLayout
        android:id="@+id/item_home_and_company_company_address"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_marginLeft="4px"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司"
            android:textColor="#FF0F151E"
            android:textSize="15px" />

        <TextView
            android:id="@+id/item_home_and_company_company_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="暂未设置"
            android:textColor="#FF9BA7BA"
            android:textSize="13px" />
    </com.dexfun.layout.DexLinearLayout>

</LinearLayout>