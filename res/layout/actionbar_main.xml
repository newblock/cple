<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/action_bar_main_view_0"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/action_bar_main_img_0"
                android:layout_width="48px"
                android:layout_height="36px"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/btn_home" />

            <TextView
                android:id="@+id/action_bar_main_text_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3px"
                android:text="主页"
                android:textColor="#FF404040"
                android:textSize="11px"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_bar_main_view_1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/action_bar_main_img_1"
                    android:layout_width="48px"
                    android:layout_height="36px"
                    android:src="@mipmap/btn_find" />

                <ImageView
                    android:id="@+id/action_bar_main_img_1_point"
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:layout_gravity="right"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="5px"
                    android:src="@mipmap/icon_new" />
            </FrameLayout>


            <TextView
                android:id="@+id/action_bar_main_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3px"
                android:text="发现"
                android:textColor="#FFABB1BA"
                android:textSize="11px"
                android:textStyle="bold" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/action_bar_main_view_2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/action_bar_main_img_2"
                android:layout_width="48px"
                android:layout_height="36px"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/btn_news" />

            <TextView
                android:id="@+id/action_bar_main_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3px"
                android:text="消息"
                android:textColor="#FFABB1BA"
                android:textSize="11px"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_bar_main_view_3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/action_bar_main_img_3"
                android:layout_width="48px"
                android:layout_height="36px"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/btn_me" />

            <TextView
                android:id="@+id/action_bar_main_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3px"
                android:text="我"
                android:textColor="#FFABB1BA"
                android:textSize="11px"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/action_bar_main_start"
        android:layout_width="58px"
        android:layout_height="58px"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_weight="1"
        android:src="@mipmap/btn_tansuo" />

</FrameLayout>