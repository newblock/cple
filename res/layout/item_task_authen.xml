<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_task_authen_img"
        android:layout_width="24px"
        android:layout_height="24px"
        android:layout_marginLeft="15px"
        android:layout_marginTop="26px"
        android:layout_marginBottom="26px"
        android:src="@mipmap/home_icon_sign_id"/>
    <TextView
        android:id="@+id/item_task_authen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车主认证"
        android:textColor="#FF232426"
        android:textSize="16px"
        android:layout_marginTop="16px"
        android:layout_marginLeft="54px"
        />
    <TextView
        android:id="@+id/item_task_authen_status"
        android:layout_width="wrap_content"
        android:layout_height="16px"
        android:text="已认证"
        android:textColor="#FF4CAF50"
        android:gravity="center"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:textSize="12px"
        android:layout_marginLeft="5px"
        android:layout_marginTop="2px"
        android:background="@drawable/bg_border_green"
        android:layout_toEndOf="@+id/item_task_authen_name"
        android:layout_alignTop="@+id/item_task_authen_name"
        />
    <TextView
        android:id="@+id/item_task_authen_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车主信息经过严格核实"
        android:textColor="#FF939499"
        android:textSize="14px"
        android:layout_below="@+id/item_task_authen_name"
        android:layout_alignStart="@+id/item_task_authen_name"
        android:layout_marginTop="2px"
        />
    <ImageView
        android:layout_width="14px"
        android:layout_height="14px"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15px"
        android:src="@mipmap/icon_return_left_mini"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"
        android:layout_marginLeft="54px"
        android:layout_marginTop="75px"/>
</RelativeLayout>