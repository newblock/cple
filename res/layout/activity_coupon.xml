<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.qcx.mini.activity.CouponActivity">
    <include layout="@layout/titlebar_1"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/coupon_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_marginTop="@dimen/titlebar_height"/>
    <ImageView
        android:id="@+id/no_coupon_img"
        android:layout_width="220px"
        android:layout_height="220px"
        android:visibility="gone"
        android:layout_gravity="center"
        android:src="@mipmap/img_no_coupon"/>



</FrameLayout>
