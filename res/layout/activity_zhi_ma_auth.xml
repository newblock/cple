<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qcx.mini.activity.ZhiMaAuthActivity"
    android:orientation="vertical">

    <include layout="@layout/titlebar_1"/>
    <EditText
        android:id="@+id/zhima_name"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:background="@null"
        android:singleLine="true"
        android:drawableBottom="@drawable/bg_bottom_gray_line"
        android:shadowColor="#ff0000"
        android:gravity="center_vertical"
        android:hint="输入您的真实姓名"
        android:textSize="17px"
        android:textCursorDrawable="@drawable/edit_cursor_color"/>

    <EditText
        android:id="@+id/zhima_id_card"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:background="@null"
        android:drawableBottom="@drawable/bg_bottom_gray_line"
        android:shadowColor="#ff0000"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:hint="输入您的身份号"
        android:textSize="17px"
        android:textCursorDrawable="@drawable/edit_cursor_color"/>


    <Button
        android:id="@+id/zhima_submit"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginTop="80px"
        android:text="完成"
        android:textColor="@color/white"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:background="@drawable/bg_circular_gray"/>

</LinearLayout>
