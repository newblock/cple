<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_search_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16px"
        android:layout_marginTop="15px"
        android:text="拼车群"
        android:textColor="#FF484848"
        android:textSize="14px"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/item_search_group_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_search_group_title">
        <com.qcx.mini.widget.CircleImageView
            android:id="@+id/item_search_group_icon"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="16px"
            android:layout_marginTop="15px"
            android:src="@mipmap/img_me" />

        <TextView
            android:id="@+id/item_search_group_name"
            android:layout_width="wrap_content"
            android:layout_height="24px"
            android:singleLine="true"
            android:layout_alignTop="@+id/item_search_group_icon"
            android:layout_marginLeft="8px"
            android:layout_toEndOf="@+id/item_search_group_icon"
            android:text="-------"
            android:textColor="#FF484848"
            android:textSize="17px" />

        <TextView
            android:id="@+id/item_search_group_man_num"
            android:layout_width="wrap_content"
            android:layout_height="16px"
            android:layout_alignStart="@+id/item_search_group_name"
            android:layout_below="@+id/item_search_group_name"
            android:background="@drawable/bg_circular_blue"
            android:gravity="center"
            android:paddingLeft="6px"
            android:paddingRight="6px"
            android:text="人数300"
            android:textColor="#FFFFFFFF"
            android:textSize="11px" />

        <TextView
            android:id="@+id/item_search_group_describe"
            android:layout_width="wrap_content"
            android:layout_height="21px"
            android:layout_alignStart="@+id/item_search_group_name"
            android:layout_below="@+id/item_search_group_man_num"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="---------------------------"
            android:textColor="#FF737373"
            android:textSize="13px" />

        <ImageView
            android:id="@+id/item_search_group_add"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/item_search_group_icon"
            android:layout_marginRight="16px"
            android:layout_marginTop="15px"
            android:visibility="gone"
            android:src="@mipmap/btn_join_mini" />
    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="92px"
        android:layout_below="@+id/item_search_group_title"
        android:background="@color/gray_line" />

    <LinearLayout
        android:id="@+id/item_search_group_bottomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="92px"
        android:layout_below="@+id/item_search_group_title"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="@color/gray_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20px"
            android:layout_marginLeft="16px"
            android:layout_marginTop="14px"
            android:text="行程"
            android:textColor="#FF484848"
            android:textSize="14px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_search_group_no_travel_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无匹配行程"
            android:gravity="center"
            android:textColor="#FFABB1BA"
            android:layout_marginTop="158px"
            android:layout_gravity="center_horizontal"
            android:textSize="17px" />
        <TextView
            android:id="@+id/item_search_group_no_travel_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去发布自己的行程吧"
            android:gravity="center"
            android:textColor="#FFABB1BA"
            android:layout_gravity="center_horizontal"
            android:textSize="17px" />
        <ImageView
            android:id="@+id/item_search_group_no_travel_release_view"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginTop="16px"
            android:src="@mipmap/icon_home_star"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="120px"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_search_group_noData"
        android:layout_width="wrap_content"
        android:layout_height="28px"
        android:layout_below="@+id/item_search_group_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32px"
        android:text="暂无匹配拼车群"
        android:textColor="#FFABB1BA"
        android:textSize="17px"
        android:visibility="gone" />

</RelativeLayout>