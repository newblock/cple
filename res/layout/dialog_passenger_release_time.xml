<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    android:divider="@drawable/divider_gray_vertical"
    android:showDividers="middle"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50px">

        <TextView
            android:id="@+id/dialog_passenger_release_time_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16px"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="#FFB9BDC3"
            android:textSize="17px" />

        <TextView
            android:id="@+id/dialog_passenger_release_time_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="确认"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_marginRight="16px"
            android:textColor="#FF484848"
            android:textSize="17px" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:orientation="horizontal">
        <com.qcx.mini.widget.wheel.app.DayWheelView
            android:id="@+id/dialog_passenger_release_time_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <com.qcx.mini.widget.wheel.app.HourWheelView
            android:id="@+id/dialog_passenger_release_time_hour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.qcx.mini.widget.wheel.app.MinuteWheelView
            android:id="@+id/dialog_passenger_release_time_minute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

    </LinearLayout>

</LinearLayout>