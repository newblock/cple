<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qcx.mini.activity.CashAccountChangeActivity"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/titlebar_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付宝"
        android:layout_marginTop="16px"
        android:layout_marginLeft="16px"
        android:textColor="#FF484848"
        android:textSize="25px" />

    <EditText
        android:id="@+id/cash_account_change_input"
        android:layout_width="match_parent"
        android:layout_marginLeft="16px"
        android:layout_height="60px"
        android:layout_marginTop="38px"
        android:layout_marginRight="16px"
        android:text="wp10-15@163.com"
        android:singleLine="true"
        android:textColor="#FF484848"
        android:background="@color/white"
        android:drawableBottom="@drawable/bg_bottom_gray_line"
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:paddingLeft="4px"
        android:textSize="17px" />

    <TextView
        android:id="@+id/cash_account_change_submit"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="80px"
        android:gravity="center"
        android:text="确认"
        android:background="@drawable/bg_gradient_blue"
        android:textColor="@color/white"
        android:textSize="16px" />

    <TextView
        android:id="@+id/cash_account_change_del"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="16px"
        android:gravity="center"
        android:text="删除"
        android:background="@drawable/bg_border_gray1"
        android:textColor="#FF484848"
        android:textSize="16px" />

</LinearLayout>
