<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.qcx.mini.activity.AuthenticationStep3Activity">

    <include layout="@layout/titlebar_1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="32px"
        android:background="#FF64B5F6">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成车主认证+100原力"
                android:textColor="#FFFFFFFF"
                android:textSize="11px"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="16px"
                android:layout_height="16px"
                android:background="@mipmap/icon_explain"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/real_name_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:layout_marginRight="29px"
            android:background="@mipmap/jindu03"
            android:layout_marginTop="15px"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginBottom="15px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="身份认证"
                android:textColor="#FF616266"
                android:textSize="12px" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="89px"
                android:text="提交车辆证件信息"
                android:textColor="#FF616266"
                android:textSize="12px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="213px"
                android:text="后台审核"
                android:textColor="#FF616266"
                android:textSize="12px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="短信通知"
                android:textColor="#FF939499"
                android:layout_gravity="right"
                android:layout_marginRight="15px"
                android:textSize="12px" />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginTop="113px"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/home_icon_completed" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资料提交成功,后台审核中"
            android:textColor="#FF616266"
            android:textSize="14px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核周期1~3个工作日,结果将以短信形式告知"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8px"
            android:textColor="#FF939499"
            android:textSize="11px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证成功后奖励100原力,将自动发放至账户"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8px"
            android:textColor="#FF939499"
            android:textSize="11px"
            />
    </LinearLayout>


</LinearLayout>
