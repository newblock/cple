<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qcx.mini.activity.PayActivity">

    <ImageView
        android:id="@+id/pay_back"
        android:layout_width="32px"
        android:layout_height="44px"
        android:layout_marginLeft="10px"
        android:src="@mipmap/btn_nav_back" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72px">

        <TextView
            android:id="@+id/pay_count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16px"
            android:text="支付剩余时间180s"
            android:textColor="#FF484848"
            android:textSize="25px" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/pay_ticket_price_view"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="60px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16px"
            android:text="票价"
            android:textColor="#FF484848"
            android:textSize="17px" />

        <TextView
            android:id="@+id/pay_ticket_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="16px"
            android:text="0元/位"
            android:textColor="#FF499EFF"
            android:textSize="17px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:background="#FFEDEDF0" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16px"
            android:text="乘车人数"
            android:textColor="#FF484848"
            android:textSize="17px" />

        <TextView
            android:id="@+id/pay_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="16px"
            android:text="0"
            android:textColor="#FF499EFF"
            android:textSize="17px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:background="#FFEDEDF0" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginTop="5px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16px"
            android:text="合计"
            android:textColor="#FF484848"
            android:textSize="17px" />

        <TextView
            android:id="@+id/pay_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="16px"
            android:text="0元"
            android:textColor="#FF499EFF"
            android:textSize="17px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:background="#FFEDEDF0" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16px"
        android:layout_marginTop="16px"
        android:text="支付方式"
        android:textColor="#FF484848"
        android:textSize="13px" />

    <LinearLayout
        android:id="@+id/pay_zhifubao_view"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginTop="5px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18px"
            android:layout_height="18px"
            android:layout_marginLeft="16px"
            android:src="@mipmap/icon_zhifubao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4px"
            android:layout_weight="1"
            android:text="支付宝"
            android:textColor="#FF484848"
            android:textSize="17px" />

        <ImageView
            android:id="@+id/pay_zhifubao_check"
            android:layout_width="18px"
            android:layout_height="18px"
            android:layout_marginRight="16px"
            android:src="@mipmap/icon_check" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="4px"
        android:background="#FFEDEDF0" />

    <LinearLayout
        android:id="@+id/pay_weixin_view"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginTop="5px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18px"
            android:layout_height="18px"
            android:layout_marginLeft="16px"
            android:src="@mipmap/icon_weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4px"
            android:layout_weight="1"
            android:text="微信"
            android:textColor="#FF484848"
            android:textSize="17px" />

        <ImageView
            android:id="@+id/pay_weixin_check"
            android:layout_width="18px"
            android:layout_height="18px"
            android:layout_marginRight="16px"
            android:src="@mipmap/icon_uncheck" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="4px"
        android:background="#FFEDEDF0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pay_cancel_order"
            android:layout_width="100px"
            android:layout_height="50px"
            android:layout_marginLeft="16px"
            android:background="@drawable/bg_border_gray1"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="#FF484848"
            android:textSize="16px" />

        <TextView
            android:id="@+id/pay_submit"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:background="@drawable/bg_circular_gradient_blue"
            android:gravity="center"
            android:text="合计--元 提交订单"
            android:textColor="#FFFFFFFF"
            android:textSize="16px" />

    </LinearLayout>

</LinearLayout>
