<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <com.qcx.mini.widget.CircleImageView
            android:id="@+id/page_passenger_travel_detail_driver_info_icon"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_marginTop="16px"
            android:layout_marginLeft="16px"
            android:src="@mipmap/img_me"/>
        <TextView
            android:id="@+id/page_passenger_travel_detail_driver_info_name"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="24px"
            android:text="无数据"
            android:layout_marginLeft="8px"
            android:gravity="center"
            android:textColor="#FF484848"
            android:textSize="17px"
            android:layout_toEndOf="@+id/page_passenger_travel_detail_driver_info_icon"
            android:layout_alignTop="@+id/page_passenger_travel_detail_driver_info_icon"
            android:layout_marginTop="7px"
            />
        <ImageView
            android:id="@+id/page_passenger_travel_detail_driver_info_sex"
            android:layout_width="14px"
            android:layout_height="14px"
            android:layout_marginTop="4px"
            android:layout_toEndOf="@+id/page_passenger_travel_detail_driver_info_name"
            android:layout_alignTop="@+id/page_passenger_travel_detail_driver_info_name"
            android:src="@mipmap/img_men"
            />
        <TextView
            android:id="@+id/page_passenger_travel_detail_driver_info_lastOnLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-- --分钟前"
            android:textColor="#FFB9BDC3"
            android:textSize="10px"
            android:layout_alignStart="@+id/page_passenger_travel_detail_driver_info_name"
            android:layout_below="@+id/page_passenger_travel_detail_driver_info_name"
            />
        <TextView
            android:id="@+id/page_passenger_travel_detail_driver_info_carInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----- ----"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textSize="10px"
            android:paddingLeft="4px"
            android:paddingRight="4px"
            android:privateImeOptions="4px"
            android:layout_marginTop="2px"
            android:layout_alignStart="@+id/page_passenger_travel_detail_driver_info_name"
            android:layout_below="@+id/page_passenger_travel_detail_driver_info_lastOnLine"
            android:background="@drawable/bg_circular_blue"
            />
        <TextView
            android:id="@+id/page_passenger_travel_detail_driver_info_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--发车"
            android:textColor="#FF484848"
            android:layout_alignTop="@+id/page_passenger_travel_detail_driver_info_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16px"
            android:textSize="13px"
            />

</RelativeLayout>