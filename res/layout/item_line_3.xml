<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_line_3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginTop="15px"
        android:background="@drawable/bg_circular_gray_7"
        android:text="线路"
        android:maxLength="5"
        android:singleLine="true"
        android:paddingBottom="1px"
        android:paddingLeft="5px"
        android:paddingRight="5px"
        android:paddingTop="1px"
        android:textColor="#FFFFFFFF"
        android:textSize="10px" />

    <TextView
        android:id="@+id/item_line_3_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5px"
        android:layout_marginTop="13px"
        android:layout_toEndOf="@+id/item_line_3_name"
        android:textColor="#FF232426"
        android:textSize="14px" />

    <TextView
        android:id="@+id/item_line_3_startAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="起点"
        android:textColor="#FF616266"
        android:textSize="14px"
        android:singleLine="true"
        android:maxWidth="101px"
        android:layout_marginTop="38px"
        android:layout_marginLeft="15px"
        android:layout_marginBottom="12px"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:layout_width="20px"
        android:layout_height="20px"
        android:src="@mipmap/icon_arrow_black"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@+id/item_line_3_startAddress"
        android:layout_alignTop="@+id/item_line_3_startAddress"/>
    <TextView
        android:id="@+id/item_line_3_endAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="终点"
        android:textColor="#FF616266"
        android:textSize="14px"
        android:singleLine="true"
        android:maxWidth="101px"
        android:layout_marginLeft="25px"
        android:layout_marginBottom="12px"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@+id/item_line_3_startAddress"
        android:layout_alignTop="@+id/item_line_3_startAddress"/>
    <ImageView
        android:layout_width="14px"
        android:layout_height="14px"
        android:src="@mipmap/icon_return_left_mini"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15px"/>

</RelativeLayout>