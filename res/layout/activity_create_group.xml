<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qcx.mini.activity.CreateGroupActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/titlebar_1"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40px"
                    android:layout_marginTop="8px"
                    android:layout_marginLeft="16px"
                    android:layout_marginRight="16px"
                    android:layout_marginBottom="1px"
                    android:background="@drawable/bg_circular_gray1">

                    <TextView
                        android:id="@+id/create_group_title1"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_margin="1px"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=" 上下班群"
                        android:textColor="#FF484848"
                        android:textSize="16px" />

                    <TextView
                        android:id="@+id/create_group_title2"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_margin="1px"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="跨城群"
                        android:textColor="#FF484848"
                        android:textSize="16px" />

                    <TextView
                        android:id="@+id/create_group_title3"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_margin="1px"
                        android:layout_weight="1"
                        android:background="@drawable/bg_circular_white"
                        android:gravity="center"
                        android:text="景点群"
                        android:textColor="#FF484848"
                        android:textSize="16px" />

                </LinearLayout>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:background="@color/gray_line"
                android:layout_marginTop="8px"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/create_group_startImg"
                    android:layout_width="18px"
                    android:layout_height="18px"
                    android:layout_marginLeft="16px"
                    android:layout_marginTop="16px"
                    android:src="@mipmap/icon_map_star" />

                <TextView
                    android:id="@+id/create_group_start_address_input"
                    android:layout_width="match_parent"
                    android:layout_height="49px"
                    android:layout_marginLeft="38px"
                    android:layout_marginRight="52px"
                    android:background="@android:color/transparent"
                    android:hint="请输入起点"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColorHint="#FF484848"
                    android:textColor="#FF484848"
                    android:textSize="13px" />

                <View
                    android:id="@+id/create_group_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="52px"
                    android:layout_marginTop="49px"
                    android:background="@color/gray_line" />

                <ImageView
                    android:layout_width="18px"
                    android:layout_height="18px"
                    android:layout_marginLeft="16px"
                    android:layout_marginTop="16px"
                    android:layout_below="@+id/create_group_line"
                    android:src="@mipmap/icon_map_end" />

                <TextView
                    android:id="@+id/create_group_end_address_input"
                    android:layout_width="match_parent"
                    android:layout_height="50px"
                    android:layout_marginLeft="38px"
                    android:layout_marginRight="52px"
                    android:layout_below="@+id/create_group_line"
                    android:background="@android:color/transparent"
                    android:hint="请输入目的地"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColorHint="#FF484848"
                    android:textColor="#FF484848"
                    android:textSize="13px" />
                <ImageView
                    android:id="@+id/create_group_exchange"
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="16px"
                    android:layout_marginTop="40px"
                    android:src="@mipmap/btn_exchange"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:background="@color/gray_line"/>
            <FrameLayout
                android:id="@+id/create_group_icon_view"
                android:layout_width="match_parent"
                android:layout_height="80px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16px"
                    android:layout_gravity="center_vertical"
                    android:text="群头像"
                    android:textColor="#737373"
                    android:textSize="17px"/>
                <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="16px"
                    android:src="@mipmap/icon_return_left"/>

                <com.qcx.mini.widget.CircleImageView
                    android:id="@+id/create_group_icon_img"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="36px"
                    android:src="@mipmap/img_me"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line"
                    android:layout_marginLeft="16px"
                    android:layout_marginRight="16px"
                    android:layout_gravity="bottom"/>

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16px"
                    android:textColor="#737373"
                    android:textSize="17px"
                    android:text="群名称"/>
                <EditText
                    android:id="@+id/create_group_name"
                    android:layout_width="match_parent"
                    android:layout_marginRight="16px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:singleLine="true"
                    android:textSize="17px"
                    android:hint="请输入群名称"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:layout_marginLeft="25px"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16px"
                    android:layout_marginTop="18px"
                    android:layout_marginBottom="18px"
                    android:textColor="#737373"
                    android:textSize="17px"
                    android:text="群介绍"/>
                <EditText
                    android:id="@+id/create_group_describe"
                    android:layout_width="match_parent"
                    android:layout_marginRight="16px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:singleLine="true"
                    android:textSize="17px"
                    android:layout_marginTop="18px"
                    android:layout_marginBottom="18px"
                    android:hint="请输入群介绍"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:layout_marginLeft="25px"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16px"
                    android:textColor="#737373"
                    android:textSize="17px"
                    android:text="运营微信"/>
                <EditText
                    android:id="@+id/create_group_manager_num"
                    android:layout_width="match_parent"
                    android:layout_marginRight="16px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:singleLine="true"
                    android:textSize="17px"
                    android:hint="请输入群运营微信号"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:layout_marginLeft="25px"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"/>

            <LinearLayout
                android:id="@+id/create_group_price_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60px"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16px"
                        android:textColor="#737373"
                        android:textSize="17px"
                        android:text="推荐价格"/>
                    <EditText
                        android:id="@+id/create_group_price"
                        android:layout_width="match_parent"
                        android:layout_marginRight="16px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:inputType="number"
                        android:background="@null"
                        android:singleLine="true"
                        android:textSize="17px"
                        android:hint="推荐价格"
                        android:textCursorDrawable="@drawable/edit_cursor_color"
                        android:layout_marginLeft="25px"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line"
                    android:layout_marginLeft="16px"
                    android:layout_marginRight="16px"/>
            </LinearLayout>
            <TextView
                android:id="@+id/create_group_submit"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginTop="49px"
                android:text="确认"
                android:textSize="16px"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg_circular_gray1"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                android:layout_marginBottom="50px"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
