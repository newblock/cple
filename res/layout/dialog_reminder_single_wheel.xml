<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="@drawable/divider_gray_vertical"
    android:showDividers="middle"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/dialog_reminder_single_wheel_topView"
        android:layout_width="match_parent"
        android:layout_height="24px"
        android:background="#FF7779">
        <TextView
            android:id="@+id/r_viewid_2"
            android:layout_width="wrap_content"
            android:layout_height="18px"
            android:text="什么是雷锋红包"
            android:textColor="#FFFFFFFF"
            android:textSize="13px"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="14px"
            android:layout_height="14px"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/r_viewid_2"
            android:src="@mipmap/icon_return_left_white_mini"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50px">

        <TextView
            android:id="@+id/dialog_reminder_single_wheel_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16px"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="#FFB9BDC3"
            android:textSize="17px" />

        <TextView
            android:id="@+id/dialog_reminder_single_wheel_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="确认"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_marginRight="16px"
            android:textColor="#FF484848"
            android:textSize="17px" />
    </FrameLayout>

    <com.qcx.mini.widget.wheel.WheelView
        android:id="@+id/dialog_reminder_single_wheel_wheelPicker"
        android:layout_width="match_parent"
        android:layout_height="210px"/>

</LinearLayout>