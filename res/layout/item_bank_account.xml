<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_bank_account_icon"
        android:layout_width="44px"
        android:layout_height="44px"
        android:layout_marginTop="15px"
        android:layout_marginBottom="15px"/>

    <TextView
        android:id="@+id/item_bank_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="15px"
        android:text="建设银行"
        android:textColor="#FF232426"
        android:textSize="17px" />
    <TextView
        android:id="@+id/item_bank_account_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尾号4694"
        android:textColor="#FF939499"
        android:textSize="14px"
        android:layout_marginLeft="60px"
        android:layout_marginTop="39px" />

    <ImageView
        android:id="@+id/item_bank_account_check"
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_gravity="end|center_vertical"
        android:src="@mipmap/btn_login_confirm_mini"/>

</FrameLayout>