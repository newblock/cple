<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qcx.mini.activity.TravelDetail_Completed_DriverActivity">

    <include layout="@layout/titlebar_1" />

    <TextView
        android:id="@+id/travel_detail_completed_driver_time"
        android:layout_width="wrap_content"
        android:layout_height="28px"
        android:layout_marginLeft="16px"
        android:layout_marginTop="16px"
        android:gravity="center"
        android:text="10月11日10:30 行程已结束"
        android:textColor="#FF484848"
        android:textSize="20px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16px">

        <ImageView
            android:layout_width="14px"
            android:layout_height="36px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14px"
            android:src="@mipmap/icon_line" />

        <TextView
            android:id="@+id/travel_detail_completed_driver_startAddress"
            android:layout_width="wrap_content"
            android:layout_height="18px"
            android:layout_marginLeft="28px"
            android:gravity="center"
            android:singleLine="true"
            android:text="金台路"
            android:textColor="#FF484848"
            android:textSize="13px" />

        <TextView
            android:id="@+id/travel_detail_completed_driver_endAddress"
            android:layout_width="wrap_content"
            android:layout_height="18px"
            android:layout_below="@+id/travel_detail_completed_driver_startAddress"
            android:layout_marginLeft="28px"
            android:layout_marginTop="4px"
            android:gravity="center"
            android:singleLine="true"
            android:text="金台路"
            android:textColor="#FF484848"
            android:textSize="13px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16px"
        android:orientation="horizontal">

        <com.qcx.mini.widget.CircleImageView
            android:id="@+id/travel_detail_completed_driver_head1"
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_marginLeft="16px"
            android:src="@mipmap/img_haveseat" />

        <com.qcx.mini.widget.CircleImageView
            android:id="@+id/travel_detail_completed_driver_head2"
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_marginLeft="4px"
            android:src="@mipmap/img_haveseat" />

        <com.qcx.mini.widget.CircleImageView
            android:id="@+id/travel_detail_completed_driver_head3"
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_marginLeft="4px"
            android:src="@mipmap/img_haveseat" />

        <com.qcx.mini.widget.CircleImageView
            android:id="@+id/travel_detail_completed_driver_head4"
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_marginLeft="4px"
            android:src="@mipmap/img_haveseat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14px"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center|end"
            android:text="收入:"
            android:textColor="#FF484848"
            android:textSize="10px" />

        <TextView
            android:id="@+id/travel_detail_completed_driver_income"
            android:layout_width="wrap_content"
            android:layout_height="24px"
            android:layout_gravity="bottom"
            android:layout_marginRight="15px"
            android:gravity="center"
            android:text="12.00"
            android:textColor="#FF484848"
            android:textSize="17px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="16px"
        android:background="#FFEDEDF0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18px"
        android:layout_marginLeft="16px"
        android:layout_marginTop="16px"
        android:gravity="center"
        android:text="乘客"
        android:textColor="#FF484848"
        android:textSize="13px" />

    <ListView
        android:id="@+id/travel_detail_completed_driver_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_list_padding"
        android:dividerHeight="1dp">

    </ListView>


    <FrameLayout
        android:id="@+id/travel_detail_completed_driver_help"
        android:layout_width="match_parent"
        android:layout_height="60px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16px"
            android:text="联系客服"
            android:textColor="#FF737373"
            android:textSize="17px" />
        <com.qcx.mini.widget.CircleImageView
            android:layout_width="18px"
            android:layout_height="18px"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="16px"
            android:src="@mipmap/icon_return_left" />
    </FrameLayout>

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50px"-->
        <!--android:text="客服"-->
        <!--android:gravity="center"-->
        <!--android:textColor="#FFFFFFFF"-->
        <!--android:layout_marginLeft="16px"-->
        <!--android:layout_marginRight="16px"-->
        <!--android:layout_marginTop="80px"-->
        <!--android:background="@drawable/bg_circular_gradient_blue"-->
        <!--android:textSize="16px" />-->

</LinearLayout>
