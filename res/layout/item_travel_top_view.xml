<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

        <com.qcx.mini.widget.CircleImageView
            android:id="@+id/item_travel_top_icon"
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/img_me"
            android:layout_marginLeft="15px"/>
        <TextView
            android:id="@+id/item_travel_top_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="10px"
            android:textSize="14px"
            android:textColor="#FF616266"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/item_travel_top_attention"
            android:layout_width="16px"
            android:layout_height="16px"
            android:src="@mipmap/btn_follow_mini"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16px"
            android:layout_marginLeft="16px"/>

</LinearLayout>