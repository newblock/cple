<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_group_member_ranking_img"
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_marginLeft="18px"
        android:src="@mipmap/icon_noone"
        android:layout_centerVertical="true"/>
    <com.qcx.mini.widget.CircleImageView
        android:id="@+id/item_group_member_icon"
        android:layout_width="44px"
        android:layout_height="44px"
        android:layout_marginTop="16px"
        android:layout_marginBottom="16px"
        android:layout_marginLeft="50px"
        android:src="@mipmap/img_me"/>
    <TextView
        android:id="@+id/item_group_member_name"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:layout_height="24px"
        android:textSize="17px"
        android:layout_marginLeft="8px"
        android:textColor="#484848"
        android:textStyle="bold"
        android:text="-------"
        android:layout_toEndOf="@+id/item_group_member_icon"
        android:layout_alignTop="@+id/item_group_member_icon"/>
    <TextView
        android:id="@+id/item_group_member_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/item_group_member_name"
        android:layout_below="@+id/item_group_member_name"
        android:text="-----------"
        android:textSize="12px"
        android:textColor="#ABB1BA"
        android:singleLine="true"/>
    <ImageView
        android:id="@+id/item_group_member_attention_img"
        android:layout_width="60px"
        android:layout_height="22px"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16px"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="75px"
        android:background="@color/gray_line"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"/>

</RelativeLayout>