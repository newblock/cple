<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="211px"
        android:scaleType="fitXY"
        android:src="@mipmap/img_chezhurenzheng" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="179px"
        android:text="区块链拼车,出行新概念"
        android:textColor="#FF232426"
        android:textSize="26px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="226px"
        android:text="让每一次出行都有价值"
        android:textColor="#FF939499"
        android:textSize="17px" />

    <TextView
        android:id="@+id/view_not_driver_text"
        android:layout_width="230px"
        android:layout_height="50px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="280px"
        android:background="@drawable/bg_circular_gradient_blue"
        android:gravity="center"
        android:text="注册车主+200原力"
        android:textColor="#FFFFFFFF"
        android:textSize="16px" />

</FrameLayout>