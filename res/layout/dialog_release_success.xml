<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@drawable/bg_circular_white"
    android:orientation="vertical">
    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon_pop_confirm"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17px"
        android:textColor="#FF484848"
        android:layout_gravity="center_horizontal"
        android:text="发布成功"/>
    <TextView
        android:id="@+id/dialog_release_success_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15px"
        android:textColor="#FF737373"
        android:layout_marginTop="16px"
        android:layout_marginLeft="16px"
        android:text="该行程已自动发布至以下拼车群："/>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="4px"
        android:id="@+id/dialog_release_success_list"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:overScrollMode="never"/>
    <TextView
        android:id="@+id/dialog_release_success_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14px"
        android:textColor="#FF484848"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8px"
        android:text="加入以上拼车群，发现更多同路人！"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"
        android:layout_marginTop="16px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_release_success_left_btn"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="暂不加入"
            android:gravity="center"
            android:textColor="#FF737373"
            android:textSize="17px"/>
        <View
            android:id="@+id/dialog_release_success_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_line"/>
        <TextView
            android:id="@+id/dialog_release_success_right_btn"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="加入"
            android:gravity="center"
            android:textColor="#FF484848"
            android:textSize="17px"/>

    </LinearLayout>

</LinearLayout>