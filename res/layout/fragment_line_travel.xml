<?xml version="1.0" encoding="utf-8"?>
<com.qcx.mini.widget.NoDataViw xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:NDDescribe="暂无行程，请稍后重试">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_line_travel_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="64px" />

    <FrameLayout
        android:id="@+id/search_release_view"
        android:layout_width="match_parent"
        android:layout_height="64px"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:NDHideAble="false">

        <TextView
            android:id="@+id/fragment_line_travel_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="12px"
            android:text="--- --- ---"
            android:textColor="#FF232426"
            android:textSize="14px" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="50px"
            android:layout_marginTop="34px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_line_travel_startAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:maxLength="8"
                android:singleLine="true"
                android:text="起点"
                android:textColor="#FF616266"
                android:textSize="12px" />

            <ImageView
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_arrow_gray" />

            <TextView
                android:id="@+id/fragment_line_travel_endAddress"
                android:layout_width="95px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLength="8"
                android:singleLine="true"
                android:text="终点"
                android:textColor="#FF616266"
                android:textSize="12px" />
        </LinearLayout>

        <TextView
            android:id="@+id/fragment_line_travel_release"
            android:layout_width="91px"
            android:layout_height="44px"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="15px"
            android:background="@drawable/bg_circular_gradient_blue"
            android:gravity="center"
            android:text="发布"
            android:textColor="#FFFFFFFF"
            android:textSize="16px" />
    </FrameLayout>

</com.qcx.mini.widget.NoDataViw>