<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_marginTop="24px"
        android:layout_marginBottom="24px"
        android:layout_marginLeft="16px"
        android:src="@mipmap/home_icon_sign_line"/>
    <TextView
        android:id="@+id/item_force_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每日登录"
        android:textColor="#FF232426"
        android:textSize="14px"
        android:layout_marginLeft="49px"
        android:layout_marginTop="15px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="16px"
        android:text="+5~35原力"
        android:paddingLeft="4px"
        android:privateImeOptions="4px"
        android:layout_toEndOf="@+id/item_force_task_name"
        android:layout_alignTop="@+id/item_force_task_name"
        android:layout_marginLeft="10px"
        android:textColor="#FFFFFFFF"
        android:textSize="12px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连续登录7日,登录奖励以5递增"
        android:textColor="#FF939499"
        android:textSize="11px"
        android:layout_marginTop="37px"
        android:layout_marginLeft="49px"
        />
    <TextView
        android:id="@+id/item_force_task_all_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/3"
        android:textColor="#FF111200"
        android:textSize="17px"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16px"
        />
    <TextView
        android:id="@+id/item_force_task_finished_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_force_task_all_time"
        android:textColor="#FFF5A623"
        android:textSize="17px"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="49px"
        android:layout_marginTop="67px"
        android:background="@color/gray_line"/>
</RelativeLayout>